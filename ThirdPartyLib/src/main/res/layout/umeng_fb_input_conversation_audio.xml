<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/umeng_fb_input_layout"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:orientation="horizontal">

    <View
        android:id="@+id/fb_reply_item_view_line"
        android:layout_width="match_parent"
        android:layout_height="@dimen/umeng_fb_item_line_height"
        android:background="@color/umeng_fb_line" />

    <ImageButton
        android:id="@+id/umeng_fb_keyboard_tag_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="ContentDescription" />

    <Button
        android:id="@+id/umeng_fb_record_btn"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>