<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/main_background</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
        <item name="android:listDivider">@drawable/list_divider</item>
        <!-- For Preferences -->
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="alertDialogTheme">@style/AppTheme.Dialog</item>
    </style>

    <style name="AppTheme.NoActionBar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="colorControlNormal">@color/active_tab_color</item>
        <item name="android:textColorPrimary">@color/active_tab_color</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/textColorPrimary</item>
        <item name="android:textColorSecondary">@color/textColorSecondary</item>
        <item name="android:colorBackground">@color/main_background</item>
    </style>

    <style name="AppTheme.ActionBar.Translucent" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/gallery_action_bar</item>
        <item name="windowActionBarOverlay">true</item>
        <item name="android:textColorPrimary">@color/active_tab_color</item>
        <item name="android:windowBackground">?colorPrimary</item>
    </style>

    <style name="AppTheme.Preference" parent="Preference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="AppTheme.Preference.Category" parent="Preference.Category">
        <item name="android:layout">@layout/preference_category_material</item>
    </style>

    <style name="AppTheme.Preference.DialogPreference" parent="Preference.DialogPreference">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="AppTheme.Preference.SwitchPreference" parent="Preference.SwitchPreference">
        <item name="android:layout">@layout/preference_material</item>
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
    </style>

    <style name="AppTheme.Preference.SwitchPreferenceCompat" parent="Preference.SwitchPreferenceCompat">
        <item name="android:layout">@layout/preference_material</item>
        <item name="android:widgetLayout">@layout/preference_widget_switch</item>
    </style>

    <style name="AppTheme.Preference.Information" parent="Preference.Information">
        <item name="android:enabled">false</item>
        <item name="android:layout">@layout/preference_information_material</item>
        <item name="android:shouldDisableView">false</item>
    </style>

    <style name="AppTheme.Preference.PreferenceScreen" parent="Preference.PreferenceScreen">
        <item name="android:layout">@layout/preference_material</item>
    </style>

    <style name="AppTheme.Preference.CheckBoxPreference" parent="Preference">
        <item name="android:layout">@layout/preference_material</item>
        <item name="android:widgetLayout">@layout/preference_widget_checkbox</item>
    </style>

    <style name="AppTheme.PreferenceFragment" parent="PreferenceFragment.Material">
        <item name="android:divider">?android:attr/listDivider</item>
    </style>

    <style name="AppTheme.PreferenceFragmentList" parent="PreferenceFragmentList" />

    <style name="AppTheme.PreferenceThemeOverlay" parent="PreferenceThemeOverlay">
        <item name="preferenceStyle">@style/AppTheme.Preference</item>
        <item name="switchPreferenceStyle">@style/AppTheme.Preference.SwitchPreference</item>
        <item name="switchPreferenceCompatStyle">@style/AppTheme.Preference.SwitchPreferenceCompat</item>
        <item name="preferenceFragmentStyle">@style/AppTheme.PreferenceFragment</item>
        <item name="preferenceFragmentCompatStyle">@style/AppTheme.PreferenceFragment</item>
        <item name="preferenceFragmentListStyle">@style/AppTheme.PreferenceFragmentList</item>
        <item name="preferenceCategoryStyle">@style/AppTheme.Preference.Category</item>
        <item name="preferenceScreenStyle">@style/AppTheme.Preference.PreferenceScreen</item>
        <item name="preferenceInformationStyle">@style/AppTheme.Preference.Information</item>
        <item name="checkBoxPreferenceStyle">@style/AppTheme.Preference.CheckBoxPreference</item>
        <item name="dialogPreferenceStyle">@style/AppTheme.Preference.DialogPreference</item>
    </style>

    <style name="AppTheme.Content" parent="AppTheme.NoActionBar" />

    <style name="AppTheme.Dialog" parent="ThemeOverlay.AppCompat.Dialog.Alert">
        <item name="android:windowBackground">@drawable/fx_dialog_material_background</item>
    </style>
</resources>
